doctype html
html(lang='en')
    include includes/header.pug
    body.bg-gradient-primary
        .container
            .card.o-hidden.border-0.shadow-lg.my-5
                .card-body.p-0
                    // Nested Row within Card Body
                    .row
                        .col-lg-5.d-none.d-lg-block.bg-register-image
                        .col-lg-7
                            .p-5
                                .text-center
                                    h1.h4.text-gray-900.mb-4 Create an Account!
                                form.user(method="POST" action="users" enctype='application/json')
                                    .form-group.row
                                        .col-sm-6.mb-3.mb-sm-0
                                            input#login.form-control.form-control-user(name='login' type='text', placeholder='Login' required)
                                    .form-group
                                        input#mail.form-control.form-control-user(name='mail' type='email', placeholder='Email Address' required)
                                    .form-group.row
                                        .col-sm-12.mb-3.mb-sm-0
                                            input#pass.form-control.form-control-user(name='pass' type='password', placeholder='Password' required)
                                    input.btn.btn-primary.btn-user.btn-block(type='submit' value="Register Account")
        // Bootstrap core JavaScript
        script(src='vendor/jquery/jquery.min.js')
        script(src='vendor/bootstrap/js/bootstrap.bundle.min.js')
        // Core plugin JavaScript
        script(src='vendor/jquery-easing/jquery.easing.min.js')
        // Custom scripts for all pages
        script(src='js/sb-admin-2.min.js')
